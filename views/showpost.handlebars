<!-- one post and all associated comments -->
<div id="one-post">
    <h2>{{title}}</h2>
    <h3>by {{post_username}} on {{format_date date}}</h3>
    <h4>{{summary}}</h4>
    <p>{{content}}</p>
</div>
{{#each comments as |comment|}}
<div class="comments">
    <h3>Comment by {{comment.username}} on {{format_date comment.date}}</h3>
    <p>{{comment.content}}</p>
</div>
{{/each}}
<button id="add-comment" data-id={{postID}}>Add a comment</button>
